generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  PENDING_FUND
  PROCESSING
  RETRY
  COMPLETED
  FAILED
}

enum BatchStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum AccountStatus {
  AVAILABLE
  BUSY
  DISABLED
}

model Order {
  id              String      @id @default(uuid())
  mintToAddress   String
  name            String
  description     String?
  image           String      @map("image_cid")
  attributes      Json?
  status          OrderStatus @default(PENDING)
  transactionHash String?
  tokenId         String?
  errorMessage    String?
  accountId       String?
  batchId         String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  batch   Batch?   @relation(fields: [batchId], references: [id])
  account Account? @relation(fields: [accountId], references: [id])
}

model Batch {
  id              String      @id @default(uuid())
  status          BatchStatus @default(PENDING)
  totalOrders     Int         @default(0)
  completedOrders Int         @default(0)
  failedOrders    Int         @default(0)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  completedAt     DateTime?

  orders Order[]
}

model Account {
  id                     String        @id @default(uuid())
  address                String        @unique
  keyReference           String
  status                 AccountStatus @default(AVAILABLE)
  nonce                  Int           @default(0)
  balance                String        @default("0")
  totalMinted            Int           @default(0)
  failedTransactions     Int           @default(0)
  successfulTransactions Int           @default(0)
  totalGasUsed           String        @default("0")
  lastUsed               DateTime?
  createdAt              DateTime      @default(now())
  updatedAt              DateTime      @updatedAt

  orders Order[]
}

model ApiKey {
  id        String    @id @default(uuid())
  key       String    @unique
  name      String
  active    Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expiresAt DateTime?
}
